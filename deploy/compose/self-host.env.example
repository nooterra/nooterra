# Required: shared ops token for control-plane/magic-link bootstrap flows.
NOOTERRA_OPS_TOKEN=replace_with_scoped_ops_token

# Required: tenant API key used by x402 gateway (format: keyId.secret).
NOOTERRA_GATEWAY_API_KEY=replace_with_key_id.secret

# Required: magic-link admin keys.
MAGIC_LINK_API_KEY=replace_with_magic_link_api_key
MAGIC_LINK_SETTINGS_KEY_HEX=replace_with_64_hex_chars

# Required: evidence object store credentials.
NOOTERRA_EVIDENCE_S3_ACCESS_KEY_ID=proxy
NOOTERRA_EVIDENCE_S3_SECRET_ACCESS_KEY=proxysecret
NOOTERRA_EVIDENCE_S3_BUCKET=nooterra-evidence
NOOTERRA_EVIDENCE_S3_REGION=us-east-1

# Optional ports.
NOOTERRA_SELFHOST_PG_PORT=5432
NOOTERRA_SELFHOST_API_PORT=3000
NOOTERRA_SELFHOST_MAGIC_LINK_PORT=8787
NOOTERRA_SELFHOST_X402_GATEWAY_PORT=8402
NOOTERRA_SELFHOST_UPSTREAM_MOCK_PORT=9402
NOOTERRA_SELFHOST_MINIO_PORT=9000
NOOTERRA_SELFHOST_MINIO_CONSOLE_PORT=9001

# Optional tuning.
PROXY_PG_SCHEMA=public
NOOTERRA_MAINTENANCE_INTERVAL_SECONDS=300
NOOTERRA_X402_HOLDBACK_BPS=0
NOOTERRA_X402_DISPUTE_WINDOW_MS=3600000
NOOTERRA_X402_AUTOFUND=0
MAGIC_LINK_BUYER_OTP_DELIVERY_MODE=record
MAGIC_LINK_DECISION_OTP_DELIVERY_MODE=record
