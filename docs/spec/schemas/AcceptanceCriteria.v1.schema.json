{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://settld.local/schemas/AcceptanceCriteria.v1.schema.json",
  "title": "AcceptanceCriteria.v1",
  "type": "object",
  "required": ["schemaVersion", "generatedAt", "criteria"],
  "properties": {
    "schemaVersion": { "const": "AcceptanceCriteria.v1" },
    "generatedAt": { "type": "string" },
    "criteria": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["criterionId", "kind"],
        "properties": {
          "criterionId": { "type": "string" },
          "kind": { "enum": ["PROOF_STATUS_EQUALS", "SLA_OVERALL_OK"] },
          "expectedStatus": { "type": "string" }
        }
      }
    }
  }
}

