{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://settld.local/schemas/ArbitrationCase.v1.schema.json",
  "title": "ArbitrationCase.v1",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schemaVersion",
    "caseId",
    "tenantId",
    "runId",
    "settlementId",
    "disputeId",
    "claimantAgentId",
    "respondentAgentId",
    "status",
    "openedAt",
    "evidenceRefs",
    "revision",
    "createdAt",
    "updatedAt"
  ],
  "properties": {
    "schemaVersion": { "const": "ArbitrationCase.v1" },
    "caseId": {
      "type": "string",
      "minLength": 3,
      "maxLength": 200
    },
    "tenantId": {
      "type": "string",
      "minLength": 1,
      "maxLength": 128,
      "pattern": "^[A-Za-z0-9:_-]+$"
    },
    "runId": {
      "type": "string",
      "minLength": 3,
      "maxLength": 128,
      "pattern": "^[A-Za-z0-9:_-]+$"
    },
    "settlementId": {
      "type": "string",
      "minLength": 3,
      "maxLength": 200
    },
    "disputeId": {
      "type": "string",
      "minLength": 3,
      "maxLength": 200
    },
    "claimantAgentId": {
      "type": "string",
      "minLength": 3,
      "maxLength": 128,
      "pattern": "^[A-Za-z0-9:_-]+$"
    },
    "respondentAgentId": {
      "type": "string",
      "minLength": 3,
      "maxLength": 128,
      "pattern": "^[A-Za-z0-9:_-]+$"
    },
    "arbiterAgentId": {
      "type": "string",
      "minLength": 3,
      "maxLength": 128,
      "pattern": "^[A-Za-z0-9:_-]+$"
    },
    "status": {
      "type": "string",
      "enum": ["open", "under_review", "verdict_issued", "closed"]
    },
    "openedAt": { "type": "string", "format": "date-time" },
    "closedAt": { "type": "string", "format": "date-time" },
    "summary": {
      "type": "string",
      "minLength": 1,
      "maxLength": 4000
    },
    "evidenceRefs": {
      "type": "array",
      "maxItems": 1000,
      "uniqueItems": true,
      "items": {
        "type": "string",
        "minLength": 1,
        "maxLength": 512
      }
    },
    "verdictId": {
      "type": "string",
      "minLength": 3,
      "maxLength": 200
    },
    "verdictHash": {
      "type": "string",
      "pattern": "^[a-f0-9]{64}$"
    },
    "appealRef": {
      "type": "object",
      "additionalProperties": false,
      "required": ["parentCaseId"],
      "properties": {
        "parentCaseId": {
          "type": "string",
          "minLength": 3,
          "maxLength": 200
        },
        "parentVerdictId": {
          "type": "string",
          "minLength": 3,
          "maxLength": 200
        },
        "reason": {
          "type": "string",
          "minLength": 1,
          "maxLength": 1000
        }
      }
    },
    "metadata": {
      "type": "object",
      "additionalProperties": true
    },
    "revision": {
      "type": "integer",
      "minimum": 0
    },
    "createdAt": { "type": "string", "format": "date-time" },
    "updatedAt": { "type": "string", "format": "date-time" }
  }
}
