{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://settld.local/schemas/OperatorAction.v1.schema.json",
  "title": "OperatorAction.v1",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schemaVersion",
    "actionId",
    "tenantId",
    "operatorId",
    "actionCode",
    "decisionCode",
    "reasonCode",
    "target",
    "occurredAt",
    "createdAt",
    "actionHash"
  ],
  "properties": {
    "schemaVersion": { "const": "OperatorAction.v1" },
    "actionId": {
      "type": "string",
      "minLength": 3,
      "maxLength": 240,
      "pattern": "^[A-Za-z0-9:_-]+$"
    },
    "tenantId": {
      "type": "string",
      "minLength": 1,
      "maxLength": 128,
      "pattern": "^[A-Za-z0-9:_-]+$"
    },
    "operatorId": {
      "type": "string",
      "minLength": 1,
      "maxLength": 128,
      "pattern": "^[A-Za-z0-9:_-]+$"
    },
    "actionCode": {
      "type": "string",
      "minLength": 2,
      "maxLength": 64,
      "pattern": "^[a-z0-9._:-]+$"
    },
    "decisionCode": {
      "type": "string",
      "minLength": 2,
      "maxLength": 64,
      "pattern": "^[a-z0-9._:-]+$"
    },
    "reasonCode": {
      "type": "string",
      "minLength": 2,
      "maxLength": 64,
      "pattern": "^[A-Z0-9_]+$"
    },
    "idempotencyKey": {
      "type": "string",
      "minLength": 8,
      "maxLength": 200,
      "pattern": "^[A-Za-z0-9:_-]+$"
    },
    "reasonDetail": {
      "type": "string",
      "minLength": 1,
      "maxLength": 2000
    },
    "target": {
      "type": "object",
      "additionalProperties": false,
      "required": ["resourceType", "resourceId"],
      "properties": {
        "resourceType": {
          "type": "string",
          "minLength": 2,
          "maxLength": 64,
          "pattern": "^[a-z0-9._:-]+$"
        },
        "resourceId": {
          "type": "string",
          "minLength": 1,
          "maxLength": 240,
          "pattern": "^[A-Za-z0-9:_-]+$"
        },
        "resourceHash": {
          "type": "string",
          "pattern": "^[0-9a-f]{64}$"
        }
      }
    },
    "evidenceRefs": {
      "type": "array",
      "maxItems": 1000,
      "uniqueItems": true,
      "items": {
        "type": "string",
        "minLength": 1,
        "maxLength": 512
      }
    },
    "metadata": {
      "type": "object",
      "additionalProperties": true
    },
    "occurredAt": { "type": "string", "format": "date-time" },
    "createdAt": { "type": "string", "format": "date-time" },
    "actionHash": { "type": "string", "pattern": "^[0-9a-f]{64}$" },
    "signature": {
      "type": "object",
      "additionalProperties": false,
      "required": ["algorithm", "signerKeyId", "actionHash", "signature", "signedAt"],
      "properties": {
        "algorithm": { "const": "ed25519" },
        "signerKeyId": {
          "type": "string",
          "minLength": 1,
          "maxLength": 256,
          "pattern": "^[A-Za-z0-9:_-]+$"
        },
        "actionHash": { "type": "string", "pattern": "^[0-9a-f]{64}$" },
        "signature": { "type": "string", "minLength": 1, "maxLength": 16384 },
        "signedAt": { "type": "string", "format": "date-time" }
      }
    }
  }
}
