{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://nooterra.local/schemas/ProofBundleManifest.v1.schema.json",
  "title": "ProofBundleManifest.v1",
  "type": "object",
  "required": ["schemaVersion", "kind", "tenantId", "scope", "generatedAt", "hashing", "files"],
  "properties": {
    "schemaVersion": { "const": "ProofBundleManifest.v1" },
    "kind": { "type": "string" },
    "tenantId": { "type": "string" },
    "scope": { "type": "object" },
    "generatedAt": { "type": "string" },
    "hashing": {
      "type": "object",
      "required": ["schemaVersion", "fileOrder", "excludes"],
      "properties": {
        "schemaVersion": { "const": "ProofBundleManifestHash.v1" },
        "fileOrder": { "const": "path_asc" },
        "excludes": { "type": "array", "items": { "type": "string" } }
      }
    },
    "files": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "sha256", "bytes"],
        "properties": {
          "name": { "type": "string" },
          "sha256": { "type": "string", "pattern": "^[0-9a-f]{64}$" },
          "bytes": { "type": "integer", "minimum": 0 }
        }
      }
    },
    "manifestHash": { "type": "string", "pattern": "^[0-9a-f]{64}$" }
  }
}

