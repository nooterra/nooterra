{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://nooterra.local/schemas/PublicKeys.v1.schema.json",
  "title": "PublicKeys.v1",
  "type": "object",
  "required": ["schemaVersion", "tenantId", "generatedAt", "order", "keys"],
  "properties": {
    "schemaVersion": { "const": "PublicKeys.v1" },
    "tenantId": { "type": "string" },
    "generatedAt": { "type": "string" },
    "order": { "const": "keyId_asc" },
    "keys": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["keyId", "publicKeyPem"],
        "properties": {
          "keyId": { "type": "string" },
          "publicKeyPem": { "type": "string" },
          "tenantId": { "type": ["string", "null"] },
          "purpose": { "type": ["string", "null"], "enum": ["robot", "operator", "server", null] },
          "status": { "type": ["string", "null"] },
          "description": { "type": ["string", "null"] },
          "validFrom": { "type": ["string", "null"] },
          "validTo": { "type": ["string", "null"] },
          "createdAt": { "type": ["string", "null"] },
          "rotatedAt": { "type": ["string", "null"] },
          "revokedAt": { "type": ["string", "null"] }
        }
      }
    }
  }
}
