{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://settld.local/schemas/RemoteSignerSignRequest.v1.schema.json",
  "title": "RemoteSignerSignRequest.v1",
  "type": "object",
  "required": ["schemaVersion", "requestId", "keyId", "algorithm", "messageBase64", "purpose", "context"],
  "properties": {
    "schemaVersion": { "const": "RemoteSignerSignRequest.v1" },
    "requestId": { "type": "string" },
    "keyId": { "type": "string" },
    "algorithm": { "enum": ["ed25519"] },
    "messageBase64": { "type": "string" },
    "purpose": {
      "enum": [
        "event_payload",
        "governance_policy",
        "revocation_list",
        "timestamp_proof",
        "pricing_matrix",
        "bundle_head_attestation",
        "verification_report",
        "settlement_decision_report"
      ]
    },
    "context": { "type": ["object", "null"] }
  }
}
